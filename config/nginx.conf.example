#user  nobody;
worker_processes  1;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    sendfile        on;
    #tcp_nopush     on;

    keepalive_timeout  65;

    gzip on;


    map $http_upgrade $connection_upgrade {
        default  upgrade;
        ''       close;
    }

    server {
        listen         80;
        return         301 https://$host$request_uri;
    }

    server {
        listen       443;
        server_name  localhost;

        ssl                  on;
        ssl_certificate     /Users/rodrigo/bitex/ssl/server.crt;
        ssl_certificate_key /Users/rodrigo/bitex/ssl/server.key;

        ssl_session_timeout  5m;

        ssl_protocols       SSLv2 SSLv3 TLSv1;
        ssl_ciphers         HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers   on;


        location / {
            root  /Users/rodrigo/bitex/static/;
            index  bitex.html;

            location ~ /(start|trading|offerbook|deposit|withdraw|account_activity|verification|enable_two_factor)$ {
              rewrite /(.*)  /bitex.html break;
            }

            location /print_boleto/ {
                proxy_pass https://localhost:8443;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

                rewrite /print_boleto(.*)  /print_boleto$1 break;
                proxy_redirect off;

            }

            location /account_verification/ {
                proxy_pass https://localhost:8443;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_redirect off;
            }

            location /trade/ {
                rewrite /trade/(.*) /$1 break;

                proxy_pass https://localhost:8443;
                proxy_http_version 1.1;
                proxy_redirect off;

                proxy_set_header Host             $host;
                proxy_set_header X-Real-IP        $remote_addr;
                proxy_set_header X-Forwarded-For  $proxy_add_x_forwarded_for;
                proxy_set_header Upgrade          $http_upgrade;
                proxy_set_header Connection       $connection_upgrade;
                proxy_read_timeout                300s;
            }


            error_page  404             /404.html;
            location = /40x.html {
              root /Users/rodrigo/bitex/static/;
            }


            # redirect server error pages to the static page /50x.html
            #
            error_page   500 502 503 504  /50x.html;
            location = /50x.html {
                root   html;
            }
        }
    }
}

